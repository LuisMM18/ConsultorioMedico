<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="25" style="-fx-background-color: #f8f9fa; -fx-padding: 30;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="consultorio.controlador.PacientesViewController">

    <!-- Título principal -->
    <Label text="Gestión de Pacientes"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Barra de búsqueda y acciones -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="buscarField" promptText="Buscar paciente por nombre o ID..."
                   prefWidth="300" style="-fx-background-radius: 8;" />
        <Button fx:id="buscarButton" text="Buscar"
                style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Button fx:id="nuevoButton" text="Nuevo Paciente"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </HBox>

    <!-- Tarjetas de resumen -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox prefWidth="200" spacing="5" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="Pacientes Totales" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
            <Label fx:id="totalPacientesLabel" text="128" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </VBox>

        <VBox prefWidth="200" spacing="5" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="Nuevos este mes" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
            <Label fx:id="nuevosMesLabel" text="14" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
        </VBox>

        <VBox prefWidth="200" spacing="5" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="Citas Activas" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" />
            <Label fx:id="citasActivasLabel" text="9" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;" />
        </VBox>
    </HBox>

    <!-- Título de la tabla -->
    <Label text="Lista de Pacientes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Tabla -->
    <TableView fx:id="tablaPacientes" prefHeight="400" style="-fx-background-radius: 8;">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>

        <columns>
            <TableColumn fx:id="colID" text="ID" prefWidth="80" />
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180" />
            <TableColumn fx:id="colEdad" text="Edad" prefWidth="80" />
            <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120" />
            <TableColumn fx:id="colCorreo" text="Correo Electrónico" prefWidth="200" />
            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150" />
        </columns>
    </TableView>

</VBox>
