<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" style="-fx-background-color: #f8f9fa; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.PacientesViewController">

    <!-- Título principal -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Gestión de Pacientes" />

    <!-- Barra de búsqueda y acciones -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <TextField fx:id="buscarField" prefWidth="300" promptText="Buscar paciente por nombre o ID..." style="-fx-background-radius: 8;" />
        <Button fx:id="nuevoButton" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Nuevo Paciente" />
    </HBox>

    <!-- Tarjetas de resumen -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox prefWidth="200" spacing="5" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Pacientes Totales" />
            <Label fx:id="totalPacientesLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="128" />
        </VBox>

        <VBox prefWidth="200" spacing="5" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Nuevos este mes" />
            <Label fx:id="nuevosMesLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="14" />
        </VBox>

        <VBox prefWidth="200" spacing="5" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Citas Activas" />
            <Label fx:id="citasActivasLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="9" />
        </VBox>
    </HBox>

    <!-- Título de la tabla -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Pacientes" />

    <!-- Tabla -->
    <TableView fx:id="tablaPacientes" prefHeight="400" style="-fx-background-radius: 8;">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>

        <columns>
            <TableColumn fx:id="colID" prefWidth="34.0" text="ID" />
            <TableColumn fx:id="colNombre" prefWidth="176.0" text="Nombre" />
            <TableColumn fx:id="colEdad" prefWidth="152.0" text="Fecha de Nacimiento" />
            <TableColumn fx:id="colTelefono" prefWidth="98.0" text="Teléfono" />
            <TableColumn fx:id="colCorreo" prefWidth="200" text="Correo Electrónico" />
            <TableColumn fx:id="colAcciones" prefWidth="150" text="Acciones" />
        </columns>
    </TableView>

</VBox>
