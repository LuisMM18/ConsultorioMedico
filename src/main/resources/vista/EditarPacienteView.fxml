<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #f4f6f8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.EditarPacienteController">

    <content>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f6f8; -fx-padding: 20;">

            <VBox maxWidth="600" spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 30;">

                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Editar Ficha del Paciente" textFill="#2c3e50">
                        <font>
                            <Font name="System Bold" size="22.0" />
                        </font>
                    </Label>
                    <Separator style="-fx-padding: 10 0 10 0;" />
                </VBox>


                <Label text="Información Personal" textFill="#3498db">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="60" /> <ColumnConstraints hgrow="ALWAYS" percentWidth="40" /> </columnConstraints>

                    <VBox spacing="5" GridPane.columnIndex="0">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Nombre Completo" />
                        <TextField fx:id="nombreField" prefHeight="40" promptText="Nombre y Apellidos" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="1">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Fecha de Nacimiento" />
                        <DatePicker fx:id="fechaNacimientoPicker" maxWidth="Infinity" prefHeight="40" style="-fx-background-radius: 5;" />
                    </VBox>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>


                <Label style="-fx-padding: 10 0 0 0;" text="Información de Contacto" textFill="#3498db">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                    </columnConstraints>

                    <VBox spacing="5" GridPane.columnIndex="0">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Teléfono" />
                        <TextField fx:id="telefonoField" prefHeight="40" promptText="Ej. 662-123-4567" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>

                    <VBox spacing="5" GridPane.columnIndex="1">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Correo Electrónico" />
                        <TextField fx:id="correoField" prefHeight="40" promptText="correo@ejemplo.com" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
                    </VBox>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <Region prefHeight="20" />

                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <Button fx:id="cancelarButton" prefHeight="40" prefWidth="120" style="-fx-background-color: white; -fx-text-fill: #7f8c8d; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" text="Cancelar">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Button>

                    <Button fx:id="guardarButton" prefHeight="40" prefWidth="160" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(154, 221, 255, 0.4), 10, 0, 0, 4); -fx-cursor: hand;" text="Guardar Cambios">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Button>
                </HBox>

            </VBox>
        </VBox>
    </content>
</ScrollPane>
