<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.AgendarNuevaCitaController">

    <content>
        <VBox alignment="TOP_CENTER" maxWidth="Infinity" spacing="20" style="-fx-padding: 30;">

            <!-- Título -->
            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Editar informacion de Paciente" />

            <!-- Formulario -->
            <GridPane hgap="10" maxWidth="Infinity" vgap="10" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

                <children>
                    <!-- Nombre -->
                    <Label style="-fx-font-size: 16px;" text="Nombre del Paciente:" GridPane.rowIndex="0" />
                    <TextField fx:id="nombreField" promptText="Escribe el nombre completo..." GridPane.rowIndex="1" />

                    <!-- Fecha de Nacimiento -->
                    <Label style="-fx-font-size: 16px;" text="Fecha de Nacimiento:" GridPane.rowIndex="2" />
                    <DatePicker fx:id="fechaNacimientoPicker" GridPane.rowIndex="3" />

                    <!-- Teléfono -->
                    <Label style="-fx-font-size: 16px;" text="Teléfono:" GridPane.rowIndex="4" />
                    <TextField fx:id="telefonoField" promptText="555-123-4567" GridPane.rowIndex="5" />

                    <!-- Correo Electrónico -->
                    <Label style="-fx-font-size: 16px;" text="Correo Electrónico:" GridPane.rowIndex="6" />
                    <TextField fx:id="correoField" promptText="correo@ejemplo.com" GridPane.rowIndex="7" />
                </children>
            </GridPane>

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="80">
                <Button fx:id="guardarButton" prefHeight="40" prefWidth="130" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>

                <Button fx:id="cancelarButton" prefHeight="40" prefWidth="130" style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold;" text="Cancelar">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
