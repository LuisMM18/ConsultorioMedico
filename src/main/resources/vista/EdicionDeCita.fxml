<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="consultorio.controlador.EdiciondeCitaController"
      prefHeight="520.0" prefWidth="600.0"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: #f9f9f9;">

    <!-- TÍTULO -->
    <Label text="Edición de Cita"
           alignment="CENTER"
           prefHeight="35.0"
           prefWidth="550.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- FORMULARIO -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0"/>
            <ColumnConstraints hgrow="ALWAYS" prefWidth="300.0"/>
        </columnConstraints>

        <!-- Paciente -->
        <Label text="Paciente:" style="-fx-font-size: 18px;"/>
        <TextField fx:id="txtPaciente" GridPane.columnIndex="1" prefWidth="300.0"/>

        <!-- Fecha y hora -->
        <Label text="Fecha y Hora:" GridPane.rowIndex="1" style="-fx-font-size: 18px;"/>
        <DatePicker fx:id="dpFechaHora" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300.0"/>

        <!-- Tipo de consulta -->
        <Label text="Tipo de Consulta:" GridPane.rowIndex="2" style="-fx-font-size: 18px;"/>
        <TextField fx:id="txtTipoConsulta" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300.0"/>

        <!-- Notas -->
        <Label text="Notas:" GridPane.rowIndex="3" style="-fx-font-size: 18px;"/>
        <TextField fx:id="txtNotas" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300.0"/>
    </GridPane>

    <!-- BOTONES -->
    <HBox alignment="CENTER" spacing="60">
        <Button text="Guardar"
                onAction="#onGuardar"
                prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>

        <Button text="Cancelar"
                onAction="#onCancelar"
                prefWidth="120.0" prefHeight="40.0"
                style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;"/>
    </HBox>

</VBox>
