<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="450.0" prefWidth="550.0" spacing="20" style="-fx-padding: 30; -fx-background-color: #f9f9f9; -fx-border-color: #cccccc; -fx-border-width: 1;"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="consultorio.controlador.EdiciondeCitaController">

    <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
           text="Editar Detalles de Cita" />

    <Separator />

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS" prefWidth="300.0" />
        </columnConstraints>

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Paciente:" GridPane.rowIndex="0" />
        <ComboBox fx:id="comboPacientes" maxWidth="Infinity" prefHeight="30.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Fecha:" GridPane.rowIndex="1" />
        <DatePicker fx:id="dpFecha" prefHeight="30.0" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Hora:" GridPane.rowIndex="2" />
        <ComboBox fx:id="comboHora" prefHeight="30.0" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Tipo de Consulta:" GridPane.rowIndex="3" />
        <TextField fx:id="txtTipoConsulta" prefHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Notas/Detalles:" GridPane.rowIndex="4"/>
        <TextArea fx:id="txtNotas" prefHeight="100.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    </GridPane>

    <Region VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER" spacing="30">
        <Button onAction="#onGuardar" prefHeight="40.0" prefWidth="140.0"
                style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                text="Guardar Cambios" />

        <Button onAction="#onCancelar" prefHeight="40.0" prefWidth="120.0"
                style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                text="Cancelar" />
    </HBox>

</VBox>