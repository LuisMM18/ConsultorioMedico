<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="520.0" prefWidth="600.0" spacing="20" style="-fx-padding: 30; -fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.EdiciondeCitaController">

    <!-- TÍTULO -->
    <Label alignment="CENTER" prefHeight="35.0" prefWidth="550.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Edición de Cita" />

    <!-- FORMULARIO -->
    <GridPane hgap="10" prefHeight="464.0" prefWidth="541.0" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
            <ColumnConstraints hgrow="ALWAYS" prefWidth="300.0" />
        </columnConstraints>

        <!-- Paciente -->
        <Label style="-fx-font-size: 18px;" text="Paciente:" />
        <TextField fx:id="txtPaciente" prefWidth="300.0" GridPane.columnIndex="1" />

        <!-- Fecha y hora -->
        <Label style="-fx-font-size: 18px;" text="Fecha y Hora:" GridPane.rowIndex="2" />
        <DatePicker fx:id="dpFechaHora" prefHeight="25.0" prefWidth="331.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Tipo de consulta -->
        <Label style="-fx-font-size: 18px;" text="Tipo de Consulta:" GridPane.rowIndex="4" />
        <TextField fx:id="txtTipoConsulta" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Notas -->
        <Label style="-fx-font-size: 18px;" text="Notas:" GridPane.rowIndex="6" />
        <TextField fx:id="txtNotas" prefHeight="84.0" prefWidth="331.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <!-- BOTONES -->
    <HBox alignment="CENTER" prefHeight="271.0" prefWidth="541.0" spacing="60">
        <Button onAction="#onGuardar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Guardar" />

        <Button onAction="#onCancelar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Cancelar" />
    </HBox>

</VBox>
