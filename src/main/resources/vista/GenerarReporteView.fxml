<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.GenerarReporteController">

    <content>
        <VBox alignment="TOP_CENTER" maxWidth="Infinity" spacing="25" style="-fx-padding: 30;">

            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Generar Reporte" />

            <Separator />

            <VBox alignment="TOP_LEFT" maxWidth="600" spacing="15">

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="1. ¿Qué tipo de reporte necesitas?" />
                <ComboBox fx:id="tipoReporteCombo" maxWidth="Infinity" prefHeight="40" promptText="Selecciona una opción (Mensual / Semanal)" />

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="2. Selecciona el periodo" />

                <HBox fx:id="panelMensual" managed="false" spacing="15" visible="false">
                    <ComboBox fx:id="mesCombo" prefHeight="40" prefWidth="200" promptText="Mes" />
                    <ComboBox fx:id="anioCombo" prefHeight="40" prefWidth="120" promptText="Año" />
                </HBox>

                <VBox fx:id="panelSemanal" managed="false" spacing="5" visible="false">
                    <Label style="-fx-font-size: 12px; -fx-text-fill: grey;" text="Selecciona cualquier día dentro de la semana deseada:" />
                    <DatePicker fx:id="fechaSemanaPicker" maxWidth="Infinity" prefHeight="40" promptText="Ej. Selecciona el miércoles para sacar toda esa semana" />
                </VBox>

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="3. ¿Dónde guardarlo?" />
                <HBox spacing="10">
                    <TextField fx:id="rutaField" editable="false" prefHeight="40" promptText="Ruta de la carpeta..." HBox.hgrow="ALWAYS" />
                    <Button onAction="#seleccionarDestino" prefHeight="40" prefWidth="50" text="..." />
                </HBox>

                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="4. ¿PDF o Excel?" />
                <ComboBox fx:id="tipoFormatoCombo" maxWidth="Infinity" prefHeight="40" promptText="Selecciona una opción (PDF / Excel)" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="60" style="-fx-padding: 20 0 0 0;">
                <Button fx:id="generarButton" onAction="#generarReporte" prefHeight="45" prefWidth="180" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Descargar Reporte" />

                <Button fx:id="cancelarButton" onAction="#cancelar" prefHeight="45" prefWidth="140" style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;" text="Cancelar" />
            </HBox>

        </VBox>
    </content>
</ScrollPane>
