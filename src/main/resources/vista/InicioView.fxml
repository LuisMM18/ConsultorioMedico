<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" style="-fx-padding: 30;">

    <Label text="Bienvenida/o Recepcionista" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <!-- Tarjetas de estadísticas -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
              spacing="5" prefWidth="200">
            <Label text="Citas de hoy" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
            <Label text="12" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        </VBox>

        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
              spacing="5" prefWidth="200">
            <Label text="Atendidas hoy" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
            <Label text="6" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
        </VBox>

        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
              spacing="5" prefWidth="200">
            <Label text="Pendientes" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
            <Label text="6" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
        </VBox>
    </HBox>

    <Label text="Próximas citas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView prefHeight="300">
        <columns>
            <TableColumn text="Hora" prefWidth="100"/>
            <TableColumn text="Paciente" prefWidth="200"/>
            <TableColumn text="Médico" prefWidth="200"/>
            <TableColumn text="Estado" prefWidth="100"/>
        </columns>
        <!-- Los datos se pueden cargar dinámicamente desde el controlador -->
    </TableView>

</VBox>