<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.InicioController">

    <Label fx:id="lblBienvenida" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Bienvenida/o Recepcionista" />

    <HBox alignment="CENTER_LEFT" spacing="20">
        <!-- Tarjetas de estadísticas -->
        <VBox prefWidth="200" spacing="5" fx:id="citasHoyBox" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Citas de hoy" />
            <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="12" />
        </VBox>

        <VBox prefWidth="200" spacing="5" fx:id="atendidasHoyBox" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Atendidas hoy" />
            <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="6" />
        </VBox>

        <VBox prefWidth="200" spacing="5" fx:id="pendientesHoyBox" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Pendientes" />
            <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" text="6" />
        </VBox>
    </HBox>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Próximas citas" />

    <TableView prefHeight="300" fx:id="tablaCitasHoy">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>

        <columns>
            <TableColumn  text="Hora" />
            <TableColumn  text="Paciente" />
            <TableColumn  text="Médico" />
            <TableColumn  text="Estado" />
        </columns>
        <!-- Los datos se pueden cargar dinámicamente desde el controlador -->
    </TableView>

</VBox>
