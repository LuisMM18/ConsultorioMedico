<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="consultorio.controlador.AgregarNotaController" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Título principal -->
            <Label fx:id="agregarNota" alignment="CENTER" text="Agregar Nueva Nota"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Formulario principal -->
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT" minWidth="100.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="300.0" />
                </columnConstraints>

                <!-- Campo: Título -->
                <Label text="Título de la Nota:" GridPane.rowIndex="0" />
                <TextField promptText="Ejemplo: Observaciones de la cita"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Campo: Fecha -->
                <Label text="Fecha:" GridPane.rowIndex="1" />
                <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Campo: Contenido de la nota -->
                <Label text="Contenido:" GridPane.rowIndex="2" />
                <TextArea promptText="Escribe aquí los detalles o comentarios relevantes..."
                          prefHeight="120.0"
                          wrapText="true"
                          GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>

            <!-- Botones de acción -->
            <HBox alignment="CENTER" spacing="80">
                <Button fx:id="Guardar" text="Guardar"
                        style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="130" prefHeight="40" />
                <Button fx:id="Cancelar" text="Cancelar" onAction="#cerrarVentana"
                        style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold;"
                        prefWidth="130" prefHeight="40" />
            </HBox>

        </VBox>
    </content>
</ScrollPane>
