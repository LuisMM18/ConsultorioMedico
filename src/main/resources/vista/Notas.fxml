<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.NotasController">

    <!-- Título -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Notas del Paciente" />

    <!-- Barra de búsqueda y botón -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="buscarNotaField" prefWidth="300" promptText="Buscar nota por titulo..." style="-fx-background-radius: 8;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="agregarNotaButton" onAction="#AgregarNota" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Nueva Nota" />
    </HBox>

    <!-- Tabla de notas -->
    <TableView fx:id="tablaNotas" prefHeight="400" style="-fx-background-radius: 8;">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="colId" prefWidth="80" text="ID" />
            <TableColumn fx:id="colTitulo" prefWidth="200" text="Título" />
            <TableColumn fx:id="colContenido" prefWidth="300" text="Contenido" />
            <TableColumn fx:id="colFecha" prefWidth="120" text="Fecha" />
            <TableColumn fx:id="colAcciones" prefWidth="150" text="Acciones" />
        </columns>
    </TableView>

</VBox>
