<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="consultorio.controlador.NotasController"
      spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;">

    <!-- Título -->
    <Label text="Notas del Consultorio"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Barra de búsqueda y botón -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="buscarNotaField" promptText="Buscar nota..."
                   prefWidth="300" style="-fx-background-radius: 8;" />
        <Button fx:id="buscarNotaButton" text="Buscar"
                style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="agregarNotaButton" text="Nueva Nota" onAction="#AgregarNota"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </HBox>

    <!-- Tabla de notas -->
    <TableView fx:id="tablaNotas" prefHeight="400" style="-fx-background-radius: 8;">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80" />
            <TableColumn fx:id="colTitulo" text="Título" prefWidth="200" />
            <TableColumn fx:id="colContenido" text="Contenido" prefWidth="300" />
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
            <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150" />
        </columns>
    </TableView>

</VBox>
