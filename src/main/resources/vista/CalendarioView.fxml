<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="642.0" prefWidth="899.0" style="-fx-background-color: #f2fafc;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.CalendarController">

    <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #D9D9D9; -fx-padding: 10;"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Button fx:id="mesAnterior" onAction="#mesAnterior" onMouseEntered="#hoverEnter" onMouseExited="#hoverExit"
                    style="-fx-background-color: #D9D9D9; -fx-border-color: #969696; -fx-border-radius: 8px;"
                    text="← Anterior" />

            <TextField fx:id="labelMes" alignment="CENTER" editable="false" prefWidth="220.0"
                       style="-fx-background-color: white; -fx-border-color: black; -fx-font-size: 14px; -fx-font-weight: bold;"
                       text="Mes Año" />

            <Button fx:id="mesSiguiente" onAction="#mesSiguiente" onMouseEntered="#hoverEnter" onMouseExited="#hoverExit"
                    style="-fx-background-color: #D9D9D9; -fx-border-color: #969696; -fx-border-radius: 8px;"
                    text="Siguiente →" />

            <Pane HBox.hgrow="ALWAYS" />

            <Button onAction="#GenerarReporte" onMouseEntered="#hoverEnter" onMouseExited="#hoverExit"
                    style="-fx-background-color: #D9D9D9; -fx-border-color: #969696; -fx-border-radius: 8px;"
                    text="Generar Reporte" />
        </children>
    </HBox>

    <GridPane layoutY="50.0" prefHeight="43.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints prefHeight="44.0" />
        </rowConstraints>
        <children>
            <StackPane style="-fx-background-color: #65C2FF;" GridPane.columnIndex="0"><Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Lunes" /></StackPane>
            <StackPane style="-fx-background-color: #65C2FF;" GridPane.columnIndex="1"><Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Martes" /></StackPane>
            <StackPane style="-fx-background-color: #65C2FF;" GridPane.columnIndex="2"><Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Miércoles" /></StackPane>
            <StackPane style="-fx-background-color: #65C2FF;" GridPane.columnIndex="3"><Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Jueves" /></StackPane>
            <StackPane style="-fx-background-color: #65C2FF;" GridPane.columnIndex="4"><Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Viernes" /></StackPane>
            <StackPane style="-fx-background-color: #65C2FF;" GridPane.columnIndex="5"><Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Sábado" /></StackPane>
            <StackPane style="-fx-background-color: #65C2FF;" GridPane.columnIndex="6"><Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Domingo" /></StackPane>
        </children>
    </GridPane>

    <GridPane fx:id="gridDias" hgap="0" style="-fx-background-color: white; -fx-border-color: #DDE3EA; -fx-border-width: 1;"
              vgap="0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="98.0">
        <columnConstraints>
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="16.66" />
            <RowConstraints percentHeight="16.66" />
            <RowConstraints percentHeight="16.66" />
            <RowConstraints percentHeight="16.66" />
            <RowConstraints percentHeight="16.66" />
            <RowConstraints percentHeight="16.66" />
        </rowConstraints>

    </GridPane>

</AnchorPane>