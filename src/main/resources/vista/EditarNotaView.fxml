<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="420.0" prefWidth="605.0" spacing="20"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: #f8f9fa; -fx-padding: 30;">

    <!-- Título -->
    <Label text="Editar Nota"
           alignment="CENTER"
           prefWidth="Infinity"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Formulario -->
    <GridPane hgap="10" vgap="18">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="150.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="420.0"/>
        </columnConstraints>

        <Label text="Titulo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="tituloField"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>

        <Label text="Notas:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="notasField"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
    </GridPane>

    <!-- Botones: idénticos al Login -->
    <HBox alignment="CENTER" spacing="100">
        <Button text="Guardar" prefHeight="49.0" prefWidth="141.0"
                style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        <Button text="Cancelar" prefHeight="49.0" prefWidth="141.0"
                style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    </HBox>

</VBox>
