<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" fx:controller="consultorio.controlador.EditarNotaController" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Título principal -->
            <Label alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Editar Nota" fx:id="EditarNota" />

            <!-- Formulario principal -->
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT" minWidth="100.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="300.0" />
                </columnConstraints>

                <!-- Campo: Título -->
                <Label text="Título de la Nota:" GridPane.rowIndex="0" />
                <TextField promptText="Ejemplo: Observaciones de la cita" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Campo: Fecha -->
                <Label text="Fecha:" GridPane.rowIndex="1" />
                <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Campo: Contenido de la nota -->
                <Label text="Contenido:" GridPane.rowIndex="2" />
                <TextArea prefHeight="120.0" promptText="Escribe aquí los detalles o comentarios relevantes..." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- Botones de acción -->
            <HBox alignment="CENTER" spacing="80">
                <Button prefHeight="40" prefWidth="130" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar" />
                <Button onAction="#cerrarVentana" prefHeight="40" prefWidth="130" style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold;" text="Cancelar" />
            </HBox>

        </VBox>
    </content>
</ScrollPane>
