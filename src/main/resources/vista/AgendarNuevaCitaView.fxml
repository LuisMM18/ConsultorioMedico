<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="Infinity" maxWidth="Infinity" spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- TÃ­tulo -->
    <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Agendar Nueva Cita" />

    <!-- Formulario -->
    <GridPane hgap="10" maxWidth="Infinity" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <!-- Paciente -->
            <Label style="-fx-font-size: 20px;" text="Paciente:" />
            <TextField maxWidth="Infinity" GridPane.columnSpan="2" GridPane.rowIndex="1">
                <font>
                    <Font size="14.0" />
                </font></TextField>

            <!-- Fecha y Hora -->
            <Label style="-fx-font-size: 20px;" text="Fecha y Hora:" GridPane.rowIndex="2" />
            <DatePicker prefHeight="31.0" prefWidth="266.0" styleClass="text-field" GridPane.columnIndex="0" GridPane.rowIndex="3" />

            <!-- Tipo de consulta -->
            <Label style="-fx-font-size: 20px;" text="Tipo de Consulta:" GridPane.rowIndex="6" />
            <TextField maxWidth="Infinity" GridPane.columnSpan="2" GridPane.rowIndex="7">
                <font>
                    <Font size="14.0" />
                </font></TextField>

            <!-- Notas -->
            <Label style="-fx-font-size: 20px;" text="Notas:" GridPane.rowIndex="9" />
            <TextField maxWidth="Infinity" GridPane.columnSpan="2" GridPane.rowIndex="10">
                <font>
                    <Font size="14.0" />
                </font></TextField>
        </children>
    </GridPane>

    <!-- Botones -->
    <HBox alignment="CENTER" spacing="100" VBox.vgrow="ALWAYS">
        <children>
            <Button contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="40.0" prefWidth="131.0" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar">
                <font>
                    <Font size="15.0" />
                </font></Button>
            <Button contentDisplay="BOTTOM" mnemonicParsing="false" prefHeight="40.0" prefWidth="131.0" style="-fx-background-color: A9A9A9; -fx-text-fill: white; -fx-font-weight: bold;" text="Cancelar">
                <font>
                    <Font size="15.0" />
                </font></Button>
        </children>
    </HBox>

</VBox>
