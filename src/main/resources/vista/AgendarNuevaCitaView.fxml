<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<ScrollPane fitToHeight="true" fitToWidth="true"
            style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="consultorio.controlador.AgendarNuevaCitaController">

    <content>
        <VBox alignment="TOP_CENTER"
              maxWidth="Infinity"
              spacing="20"
              style="-fx-padding: 30;">

            <!-- Declaración del ToggleGroup -->
            <fx:define>
                <ToggleGroup fx:id="tipoPacienteGroup" />
            </fx:define>

            <!-- Título -->
            <Label alignment="CENTER"
                   maxWidth="Infinity"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"
                   text="Agendar Nueva Cita" />

            <!-- Selector de tipo de paciente -->
            <HBox spacing="15">
                <RadioButton fx:id="rbNuevoPaciente"
                             text="Nuevo paciente"
                             selected="true"
                             toggleGroup="$tipoPacienteGroup" />

                <RadioButton fx:id="rbPacienteExistente"
                             text="Paciente existente"
                             toggleGroup="$tipoPacienteGroup" />

                <ComboBox fx:id="comboPacientes"
                          promptText="Seleccionar paciente existente"
                          prefWidth="300" />
            </HBox>

            <!-- Formulario -->
            <GridPane hgap="10"
                      maxWidth="Infinity"
                      vgap="10"
                      VBox.vgrow="ALWAYS">

                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                </rowConstraints>

                <!-- Nombre -->
                <Label style="-fx-font-size: 16px;"
                       text="Nombre del Paciente:"
                       GridPane.rowIndex="0" />
                <TextField fx:id="nombreField"
                           promptText="Escribe el nombre completo..."
                           GridPane.rowIndex="1" />

                <!-- Fecha de Nacimiento -->
                <Label style="-fx-font-size: 16px;"
                       text="Fecha de Nacimiento:"
                       GridPane.rowIndex="2" />
                <DatePicker fx:id="fechaNacimientoPicker"
                            GridPane.rowIndex="3" />

                <!-- Teléfono -->
                <Label style="-fx-font-size: 16px;"
                       text="Teléfono:"
                       GridPane.rowIndex="4" />
                <TextField fx:id="telefonoField"
                           promptText="555-123-4567"
                           GridPane.rowIndex="5" />

                <!-- Correo Electrónico -->
                <Label style="-fx-font-size: 16px;"
                       text="Correo Electrónico:"
                       GridPane.rowIndex="6" />
                <TextField fx:id="correoField"
                           promptText="correo@ejemplo.com"
                           GridPane.rowIndex="7" />

                <!-- Fecha de la cita -->
                <Label style="-fx-font-size: 16px;"
                       text="Fecha de la cita:"
                       GridPane.rowIndex="8" />
                <DatePicker fx:id="fechaCitaPicker"
                            GridPane.rowIndex="9" />

                <!-- Hora de la cita -->
                <Label style="-fx-font-size: 16px;"
                       text="Hora de la cita:"
                       GridPane.rowIndex="10" />
                <ChoiceBox fx:id="horaChoiceBox"
                           prefWidth="150.0"
                           GridPane.rowIndex="11">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="09:00 AM" />
                            <String fx:value="10:00 AM" />
                            <String fx:value="11:00 AM" />
                            <String fx:value="12:00 PM" />
                            <String fx:value="01:00 PM" />
                            <String fx:value="02:00 PM" />
                            <String fx:value="03:00 PM" />
                            <String fx:value="04:00 PM" />
                            <String fx:value="05:00 PM" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </GridPane>

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="80">
                <Button fx:id="guardarButton"
                        prefHeight="40"
                        prefWidth="130"
                        style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Guardar">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>

                <Button fx:id="cancelarButton"
                        prefHeight="40"
                        prefWidth="130"
                        style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Cancelar">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </HBox>

        </VBox>
    </content>
</ScrollPane>