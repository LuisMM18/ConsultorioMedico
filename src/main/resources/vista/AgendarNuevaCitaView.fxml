<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" fitToHeight="true"
            style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="consultorio.controlador.AgendarNuevaCitaController">

    <content>
        <VBox spacing="20" style="-fx-padding: 30;" alignment="TOP_CENTER" maxWidth="Infinity">

            <!-- Título -->
            <Label alignment="CENTER" maxWidth="Infinity"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"
                   text="Agendar Nueva Cita" />

            <!-- Formulario -->
            <GridPane hgap="10" vgap="10" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                    <RowConstraints vgrow="SOMETIMES" />
                </rowConstraints>

                <children>
                    <!-- Nombre -->
                    <Label style="-fx-font-size: 16px;" text="Nombre del Paciente:" GridPane.rowIndex="0" />
                    <TextField fx:id="nombreField" GridPane.rowIndex="1" promptText="Escribe el nombre completo..." />

                    <!-- Fecha de Nacimiento -->
                    <Label style="-fx-font-size: 16px;" text="Fecha de Nacimiento:" GridPane.rowIndex="2" />
                    <DatePicker fx:id="fechaNacimientoPicker" GridPane.rowIndex="3" />

                    <!-- Teléfono -->
                    <Label style="-fx-font-size: 16px;" text="Teléfono:" GridPane.rowIndex="4" />
                    <TextField fx:id="telefonoField" GridPane.rowIndex="5" promptText="555-123-4567" />

                    <!-- Correo Electrónico -->
                    <Label style="-fx-font-size: 16px;" text="Correo Electrónico:" GridPane.rowIndex="6" />
                    <TextField fx:id="correoField" GridPane.rowIndex="7" promptText="correo@ejemplo.com" />

                    <!-- Notas -->
                    <Label style="-fx-font-size: 16px;" text="Notas:" GridPane.rowIndex="8" />
                    <TextField fx:id="notasField" GridPane.rowIndex="9" promptText="Notas adicionales..." />
                </children>
            </GridPane>

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="80">
                <Button fx:id="guardarButton"
                        style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Guardar" prefWidth="130" prefHeight="40">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>

                <Button fx:id="cancelarButton"
                        style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Cancelar" prefWidth="130" prefHeight="40">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
