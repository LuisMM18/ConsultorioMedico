<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefWidth="319.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.ListaVistaDiaController">

    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #d3d3d3;" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="fechaLabel" maxWidth="Infinity" style="-fx-font-size: 24px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10" left="20.0" top="10" />
                    </padding>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="appointmentContainer" maxWidth="Infinity" spacing="10.0" style="-fx-background-color: transparent; -fx-padding: 15;" VBox.vgrow="ALWAYS" />
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="12" style="-fx-background-color: #d3d3d3;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
            </padding>
            <children>
                <Button fx:id="btnNuevo" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#onNuevo" prefHeight="40.0" prefWidth="141.0" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;" text="Nuevo">
                    <font><Font size="15.0" /></font>
                </Button>

                <Button fx:id="btnGuardar" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#onGuardar" prefHeight="40.0" prefWidth="141.0" style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar">
                    <font><Font size="15.0" /></font>
                </Button>
            </children>
        </HBox>
    </bottom>

</BorderPane>
