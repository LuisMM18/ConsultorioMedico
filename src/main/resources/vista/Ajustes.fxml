<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="consultorio.controlador.AjustesController"
            style="-fx-background-color: #f8f9fa;"
            stylesheets="@../styles.css">

    <!-- Encabezado -->
    <top>
        <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 20;">
            <Label text="Configuración de Perfil" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label text="Actualiza tus datos personales o cambia tu contraseña" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
            <Separator />
        </VBox>
    </top>

    <!-- Contenido principal -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 30;">

            <!-- Tarjeta de información personal -->
            <VBox spacing="15" prefWidth="500"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">

                <Label text="Datos Personales" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120" />
                        <ColumnConstraints halignment="LEFT" />
                    </columnConstraints>

                    <Label text="Nombre:" GridPane.rowIndex="0" />
                    <TextField fx:id="nombreField" promptText="Ingresa tu nombre completo" GridPane.columnIndex="1" />

                    <Label text="Correo:" GridPane.rowIndex="1" />
                    <TextField fx:id="correoField" promptText="correo@ejemplo.com" GridPane.columnIndex="1" />

                    <Label text="Teléfono:" GridPane.rowIndex="2" />
                    <TextField fx:id="telefonoField" promptText="Ej. 662-123-4567" GridPane.columnIndex="1" />
                </GridPane>
            </VBox>

            <!-- Tarjeta de cambio de contraseña -->
            <VBox spacing="15" prefWidth="500"
                  style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">

                <Label text="Cambio de Contraseña" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

                <GridPane hgap="15" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="150" />
                        <ColumnConstraints halignment="LEFT" />
                    </columnConstraints>

                    <Label text="Contraseña actual:" GridPane.rowIndex="0" />
                    <PasswordField fx:id="actualField" promptText="Contraseña actual" GridPane.columnIndex="1" />

                    <Label text="Nueva contraseña:" GridPane.rowIndex="1" />
                    <PasswordField fx:id="nuevaField" promptText="Nueva contraseña" GridPane.columnIndex="1" />

                    <Label text="Confirmar contraseña:" GridPane.rowIndex="2" />
                    <PasswordField fx:id="confirmarField" promptText="Repite la nueva contraseña" GridPane.columnIndex="1" />
                </GridPane>
            </VBox>

            <!-- Botones de acción -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="guardarButton" text="Guardar Cambios"
                        style="-fx-background-color: #9ADDFF; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 160;" />
                <Button fx:id="cancelarButton" text="Cancelar"
                        style="-fx-background-color: #A9A9A9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 160;" />
            </HBox>

        </VBox>
    </center>

</BorderPane>
