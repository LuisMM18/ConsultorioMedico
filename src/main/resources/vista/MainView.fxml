<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="consultorio.controlador.MainController">

    <!-- Panel izquierdo (navegación) -->
    <left>
        <VBox fx:id="sidebar" prefHeight="631.0" prefWidth="235.0" spacing="10" style="-fx-background-color: #9ADDFF;">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <!-- Logo -->
            <HBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="90.0" fitWidth="195.0" preserveRatio="true">
                    <Image url="@../imagenes/Logo.png" />
                </ImageView>
                <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" textFill="WHITE" />
            </HBox>

            <Separator style="-fx-background-color: #9ADDFF; -fx-padding: 10 0;" />

            <!-- Información del usuario -->
            <Label prefHeight="18.0" prefWidth="191.0" style="-fx-font-size: 12px;" text="Bienvenido/a" />
            <Label fx:id="lblUsuario" prefHeight="18.0" prefWidth="199.0" style="-fx-font-weight: bold;" text="Recepcionista" textFill="Black" />

            <Separator style="-fx-background-color: #9ADDFF; -fx-padding: 10 0;" />

            <!-- Botones de navegación -->
            <Button fx:id="btnInicio" onAction="#cambiarVistaInicio" styleClass="nav-button" text="Inicio" />
            <Button fx:id="btnCitas" onAction="#cambiarVistaCitas" styleClass="nav-button" text="Citas de Hoy" />
            <Button fx:id="btnCalendario" onAction="#cambiarVistaCalendario" styleClass="nav-button" text="Calendario" />
            <Button fx:id="btnPacientes" onAction="#cambiarVistaPacientes" styleClass="nav-button" text="Pacientes" />
            <Button fx:id="btnAgendar" onAction="#cambiarVistaAgendar" styleClass="nav-button" text="Agendar Cita" />
            <Button fx:id="btnAjustes" onAction="#cambiarVistaAjustes" styleClass="nav-button" text="Ajustes de cuenta" />

            <Region VBox.vgrow="ALWAYS" />

            <Button onAction="#cerrarSesion" styleClass="nav-button-logout" text="Cerrar Sesión" />
        </VBox>
    </left>

    <!-- Área central (contenido dinámico) -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f7fa;">
            <!-- Aquí se cargarán las diferentes vistas -->
        </StackPane>
    </center>

</BorderPane>
