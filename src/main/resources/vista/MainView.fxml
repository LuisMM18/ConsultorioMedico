<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="consultorio.controlador.MainController"
            stylesheets="@../styles.css">

    <!-- Panel izquierdo (navegación) -->
    <left>
        <VBox fx:id="sidebar" style="-fx-background-color: #2c3e50;" spacing="10" prefWidth="220">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo -->
            <HBox alignment="CENTER" spacing="10">
                <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
                    <Image url="@../imagenes/Logo.png" />
                </ImageView>
                <Label text="Consultorio Médico" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            </HBox>

            <Separator style="-fx-background-color: #34495e; -fx-padding: 10 0;"/>

            <!-- Información del usuario -->
            <Label text="Bienvenido/a" textFill="#ecf0f1" style="-fx-font-size: 12px;"/>
            <Label fx:id="lblUsuario" text="Recepcionista" textFill="#3498db" style="-fx-font-weight: bold;"/>

            <Separator style="-fx-background-color: #34495e; -fx-padding: 10 0;"/>

            <!-- Botones de navegación -->
            <Button fx:id="btnInicio" text="Inicio" styleClass="nav-button" onAction="#cambiarVistaInicio"/>
            <Button fx:id="btnCitas" text="Citas de Hoy" styleClass="nav-button" onAction="#cambiarVistaCitas"/>
            <Button fx:id="btnCalendario" text="Calendario" styleClass="nav-button" onAction="#cambiarVistaCalendario"/>
            <Button fx:id="btnPacientes" text="Pacientes" styleClass="nav-button" onAction="#cambiarVistaPacientes"/>
            <Button fx:id="btnAgendar" text="Agendar Cita" styleClass="nav-button" onAction="#cambiarVistaAgendar"/>


            <Region VBox.vgrow="ALWAYS"/>

            <Button text="Cerrar Sesión" styleClass="nav-button-logout" onAction="#cerrarSesion"/>
        </VBox>
    </left>

    <!-- Área central (contenido dinámico) -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f7fa;">
            <!-- Aquí se cargarán las diferentes vistas -->
        </StackPane>
    </center>

</BorderPane>